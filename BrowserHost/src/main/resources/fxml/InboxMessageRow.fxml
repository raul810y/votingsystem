<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<HBox fx:id="mainPane" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="message-row" stylesheets="@../css/inbox.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Button fx:id="removeButton" mnemonicParsing="false" />
      <Button fx:id="messageButton" mnemonicParsing="false" onAction="#onClickMessageButton" stylesheets="@../css/inbox.css" text="Button">
         <HBox.margin>
            <Insets left="10.0" right="10.0" />
         </HBox.margin></Button>
      <VBox prefWidth="100.0" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="dateLbl">
               <font>
                  <Font size="10.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <Label fx:id="descriptionLbl" text="Label" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
   </padding>
</HBox>
