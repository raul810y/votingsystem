<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="AccessControl" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/AccessControl</jta-data-source>
        <class>org.votingsystem.model.Actor</class>
        <class>org.votingsystem.model.Address</class>
        <class>org.votingsystem.model.BackupRequest</class>
        <class>org.votingsystem.model.Batch</class>
        <class>org.votingsystem.model.Certificate</class>
        <class>org.votingsystem.model.Device</class>
        <class>org.votingsystem.model.currency.Group</class>
        <class>org.votingsystem.model.Image</class>
        <class>org.votingsystem.model.KeyStore</class>
        <class>org.votingsystem.model.CMSMessage</class>
        <class>org.votingsystem.model.ResponseVS</class>
        <class>org.votingsystem.model.TagVS</class>
        <class>org.votingsystem.model.User</class>
        <class>org.votingsystem.model.voting.AccessControl</class>
        <class>org.votingsystem.model.voting.AccessRequest</class>
        <class>org.votingsystem.model.voting.AnonymousDelegation</class>
        <class>org.votingsystem.model.voting.ControlCenter</class>
        <class>org.votingsystem.model.voting.EventVS</class>
        <class>org.votingsystem.model.voting.EventElection</class>
        <class>org.votingsystem.model.voting.FieldEvent</class>
        <class>org.votingsystem.model.voting.FieldValueEvent</class>
        <class>org.votingsystem.model.voting.RepresentationDocument</class>
        <class>org.votingsystem.model.voting.RepresentativeDocument</class>
        <class>org.votingsystem.model.voting.UserRequestCsr</class>
        <class>org.votingsystem.model.voting.VoteCanceler</class>
        <class>org.votingsystem.model.voting.Vote</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <!--<property name="javax.persistence.schema-generation.create-source" value="script"/>
            <property name="javax.persistence.schema-generation.create-script-source" value="META-INF/create.sql"/>
            <property name="javax.persistence.sql-load-script-source" value="META-INF/load.sql"/>-->
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
